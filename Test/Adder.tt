-- Example with a full adder
-- Building up to demonstrating resource sharing with let bindings
-- (i.e. the `a xor b` computation should be shared between both outputs)

object Bit : Type where
     O : Bit
     I : Bit

xor : Bit -> Bit -> Bit
xor O O = O
xor O I = I
xor I O = I
xor I I = O

or : Bit -> Bit -> Bit
or O O = O
or O I = I
or I O = I
or I I = I

and : Bit -> Bit -> Bit
and O O = O
and O I = O
and I O = O
and I I = I

data Pair : Type -> Type where
     MkP : {a : Type} -> a -> a -> Pair a

dup : Bit -> Pair Bit
pat b : Bit =>
    dup b = MkP {Bit} b b

fa : Bit -> Bit -> Bit -> Pair Bit
pat a : Bit, b : Bit, cin : Bit =>
    fa a b cin = let axorb = xor a b
                 in MkP {Bit} (xor axorb cin)
                              (or (and axorb cin) (and a b))
